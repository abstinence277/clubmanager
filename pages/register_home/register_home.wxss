/* pages/home/home.wxss */
.banner{height: 200rx;border: 1px solid black;}
.banner image{width: 100%;height: 200rpx;}
.banneritem{padding: 0 5px;box-sizing: border-box;}
.center{
  text-align: center;
}
.outside{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.inside{
  margin: 30rpx;
  padding: 20rpx;
  height: 50rpx;
  width: 60%;
  border: 2rpx solid;
  border-color: black;
}
.s_view{
  position: fixed;
  width: 90%;
  margin: 0 25%;
  display: flex;/* 如果把盒子设置为弹性盒子,必须要加的 */
  flex-direction: row;/* 设置一个大盒子内容垂直排列*/
  align-items: center;/* 设置一个大盒子内容居中排列*/
  top: 300rpx;
}
.login_btn{
  color:#DC143C;
  border: 1px solid #DC143C;
}
.register_btn{
  position: absolute;
  color:	#228B22;
  border: 1px solid 	#228B22;
}

.circle{
  width: 100px;
  height: 100px;
  border: 0 solid #ffffff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #cccccc;
  top: 300rpx;
}

.radio {
  margin-top: 20px;
  padding: 15px;
}
